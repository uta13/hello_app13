<div class="main user-show">
  <div class="container">
    <div class="user">
      <img src="<%= "/user_images/#{@user.image_name}" %>">
      <h2><%= @user.name %></h2>
      <% if @user.id == @current_user.id %>
        <%= link_to("編集","/users/#{@user.id}/edit") %>
      <% end %>
    </div>



    <ul class="user-tabs">
      <li><%= link_to("投稿", "/users/#{@user.id}") %></li>
      <li class="active"><%= link_to("いいね!", "/users/#{@user.id}/likes") %></li>
      <li><%= link_to("フォロー","/users/#{@user.id}/follow") %></li>
      <li><%= link_to("フォロワー","/users/#{@user.id}/follower") %></li>
    </ul>


    <% @likes.each do | like | %>
      <% post = Post.find_by(id: like.post_id) %>
      <div class="posts-index-item">
        <div class="user-left">
            <img src="<%= "/user_images/#{post.user.image_name}" %>">
        </div>
        <div class="post-right">
          <div class="post-user-name">
            <%= link_to(post.user.name,"/users/#{post.user.id}") %>
          </div>
          <div class="post-kiji">
            <h2><%= link_to("SANGO!","/posts/#{post.id}") %></h2>
            <a class="sango"><%= post.first %></a>
            <a class="sango"><%= post.second %></a>
            <a class="sango"><%= post.third %></a>
            <div class="post-kiji-url">
            <p><%= link_to(post.content,"/posts/#{post.id}") %></p>
            </div>
          </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
