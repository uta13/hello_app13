<div class="main user-show">
  <div class="container">
    <div class="user">
      <img src="<%= "/user_images/#{@user.image_name}" %>">
      <h2><%= @user.name %></h2>
      <% if @user.id == @current_user.id %>
        <%= link_to("編集","/users/#{@user.id}/edit") %>
      <% end %>
    </div>
    <% if @current_user.id != @user.id %>
    <div class="follow">
    <% if Follow.find_by(follow_id: @current_user.id,follower_id: @user.id) %>
    <div class="following">
    <%= link_to("フォロー中","/follows/#{@user.id}/destroy",{method: "post"}) %>
    </div>
    <% else %>
    <div class="follows">
    <%= link_to("フォローする","/follows/#{@user.id}/create",{method: "post"}) %>
    </div>
    <% end %>
    </div>
    <% end %>



    <ul class="user-tabs">
      <li ><%= link_to("投稿", "/users/#{@user.id}") %></li>
      <li><%= link_to("いいね!", "/users/#{@user.id}/likes") %></li>
      <li><%= link_to("フォロー","/users/#{@user.id}/follow") %></li>
      <li class="active"><%= link_to("フォロワー","/users/#{@user.id}/follower") %></li>
    </ul>

    <% @follower.each do | follower | %>
    <% user = User.find_by(id: follower.follow_id) %>
    <div class="users-index-item">
      <div class="user-left">
          <img src="<%= "/user_images/#{user.image_name}" %>">
      </div>
      <div class="user-right">
        <%= link_to(user.name,"/users/#{user.id}") %>
      </div>
    </div>
      <% end %>



  </div>
</div>
