<div class="main users-form">
  <div class="container">
    <div class="form-heading">ログイン</div>
    <div class="form users-form">
      <div class="form-body">
        <% if @user_error_message %>
        <div class="form-eeror">
        <%= @user_error_message %>
        </div>
        <% end %>

        <%= form_tag("/login") do %>
        <p>ユーザーID</p>
        <input name="name" autocomplete="name" value="<%= @id %>">
        <p>password</p>
        <input type="password" autocomplete="password" name="password">
        <input type="submit" value="ログイン">
        <% end %>
      </div>
    </div>
  </div>
</div>
